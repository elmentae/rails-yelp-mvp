<div class="container mx-auto w-75">
<h2 class="text-muted">Create a new restaurant</h2>
  <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: %w(chinese italian japanese french belgian), as: :select %>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>